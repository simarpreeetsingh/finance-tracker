<div class="row d-flex justify-content-center m-0">
  <div class="col-lg-6 col-md-10 col-sm-12">
    <div class="card shadow px-5 py-4">
      <h1 class="text-center display-4 mb-3"><%= t('.title', resource: resource_name.to_s.humanize) %></h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= bootstrap_devise_error_messages! %>
      
        <div class="row m-0">
              
          <div class="col-6 pl-0">
            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>
          </div>
          
          <div class="col-6 pr-0">
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>
          </div>
      
        </div>
      
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
      
        <div class="row m-0">
          <div class="col-6 pl-0">
            <div class="form-group">
              <%= f.label :password, 'New password' %>
              <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
          
              <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
            </div>
          </div>
          <div class="col-6 pr-0">
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
            </div>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
      
          <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
        </div>
      
        <div class="form-group text-center">
          <%= f.submit t('.update'), class: 'btn btn-primary' %>
        </div>
      
      <% end %>
      
      <p class="mb-0"><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>
      
      <%= link_to t('.back'), :back %>
    </div>
  </div>
</div>

